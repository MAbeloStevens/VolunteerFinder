<div class="centered">
  <form id="commentForm" method="post" action="/api/organizations/{{organization.o_id}}/comment">
    <h3>Write Comment for "{{organization.name}}"</h3>
    <textarea name="comment"></textarea>
    <button>Post</button>
  </form>

  <br>
  <a href="/organizations/{{organization.o_id}}" class="button">Back to "{{organization.name}}"</a>
</div>

<div id="errorDiv" class="errors centered" hidden>
  <p id="errorMessage"></p>
</div>