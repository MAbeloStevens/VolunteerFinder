<div class="centered">
  <form id="createOrgForm" method="post" action="/api/createOrg" enctype="multipart/form-data">
    <div class="textInputs">
      <label for="name">
        Organization Name
        <input type="text" name="name" id="name">
      </label>
    </div>

    <label for="description">Description</label>
    <textarea name="description" id="description"></textarea>

    <label for="contact">Contact Info</label>
    <textarea name="contact" id="contact"></textarea>

    <div class="textInputs">
      <label>
        External Link
        <input name="link" id="link" placeholder="https://example.org">
        {{!-- Removed type="url" to remove the html validation in place of clientside validation --}}
      </label>
    </div>

    <div class="centered">
      <h3>Select Tags:</h3>
      <p class="subtext">hold ctrl/cmd to select multiple</p>
      <select id="tagSelection" name="tags" multiple size="5">
          {{#each knownTags}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
      </select>
    </div>

    <div class="centered">
      <input id="addTagInput">
      <button type="button" id="addTagButton">Add Tag</button>
    </div>

    <div class="centered imgUpload">
        <h3>Upload Banner Image:</h3>
        <input class="centered" type="file" id="bannerImg" name="bannerImg" accept="image/*">
    </div>

    <button type="submit">Create Organization</button>
  </form>
  
  <br>
  <a href="/orgAdmin" class="button">Back to Organization Admin</a>
</div>

<div id="errorDiv" class="errors centered" hidden>
  <p id="errorMessage"></p>
</div>