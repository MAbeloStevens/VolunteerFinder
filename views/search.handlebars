<div id="searchPage">
    <div class="leftBar">
        <form id="searchForm" method="post" action="/api/search">
            <h3 class="centered">Organization Search</h3>

            <input name="searchTxt" id="searchInput" placeholder="search by name">

            <div id="tagSelect" class="centered">
                <h3>Select Tags:</h3>
                <p class="subtext">hold ctrl/cmd to select multiple</p>
                <select name="tags" multiple size="5">
                    {{#each knownTags}}
                    <option value="{{this}}"/>{{this}}</option>
                    {{/each}}
                </select>
                <div class="radioSelect">
                <input id="any" type="radio" name="anyOrAll" value="any" checked>
                <label for="any">Any Tag</label>
                <input id="all" type="radio" name="anyOrAll" value="all">
                <label for="all">All Tags</label>
                </div>
            </div>

            <button type="submit">Search</button>
        </form>

        <div id="errorDiv" class="errors centered" hidden>
            <p id="errorMessage"></p>
        </div>
    </div>

    <div class="searchResults" id="searchResults">
        <p id="noResults">No Results. Use the search bar and/or tags to specify your search</p>
    </div>
</div>